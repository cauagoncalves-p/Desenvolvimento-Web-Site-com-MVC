@model Uc_13_Caua_WebSite.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeFornecedor" class="control-label"></label>
                <input asp-for="NomeFornecedor" class="form-control" placeholder="Ex: Empresa ABC Ltda" />
                <span asp-validation-for="NomeFornecedor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Ex: contato@empresa.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" placeholder="XX.XXX.XXX/XXXX-XX" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnderecoCompleto" class="control-label"></label>
                <input asp-for="EnderecoCompleto" class="form-control" placeholder="Av. Principal, 1234 - Centro" />
                <span asp-validation-for="EnderecoCompleto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" placeholder="XXXXX-XXX" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Ex: São Paulo" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" placeholder="Ex: São Paulo" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <select asp-for="UF" class="form-control" asp-items="ViewBag.Estados">
                    <option value="">Selecione o Estado...</option>
                </select>
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pais" class="control-label"></label>
                <input asp-for="Pais" class="form-control" placeholder="Brasil" value="Brasil" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
