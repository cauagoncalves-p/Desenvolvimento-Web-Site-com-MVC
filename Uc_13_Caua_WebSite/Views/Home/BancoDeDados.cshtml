@{
    Layout = null; // Isso desabilita o uso de qualquer _Layout
    ViewData["Title"] = "Skate Tech - Página Inicial";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <link href="~/css/paginabancodedados.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="nav-container">
            <a asp-action="Index" asp-controller="Home" class="header-title">
                <i class="fas fa-database"></i>
                <span>Skate Tech</span>
            </a>
            <nav class="nav-links">
                <a asp-controller="Clientes" asp-action="Index" class="nav-link">
                    <i class="fas fa-users"></i> Clientes
                </a>
                <a asp-controller="Fornecedors" asp-action="Index" class="nav-link">
                    <i class="fas fa-truck"></i> Fornecedores
                </a>
                <a asp-controller="Produtoes" asp-action="Index" class="nav-link">
                    <i class="fas fa-box"></i> Produtos
                </a>
                <a asp-controller="Pedidoes" asp-action="Index" class="nav-link">
                    <i class="fas fa-shopping-cart"></i> Pedidos
                </a>
                <a asp-controller="Item_Pedido" asp-action="Index" class="nav-link">
                    <i class="fas fa-list-ul"></i> Itens Pedido
                </a>
            </nav>
        </div>
    </header>

    <main>
        <h1 class="main-title">SKATE TECH</h1>
    </main>

    <footer>
        &copy; @DateTime.Now.Year - Skate Tech
    </footer>

    <script>
        // Efeito de digitação para o título principal
        document.addEventListener('DOMContentLoaded', function() {
            const title = document.querySelector('.main-title');
            const text = 'SKATE TECH';
            let i = 0;

            function typeWriter() {
                if (i < text.length) {
                    title.textContent = text.substring(0, i+1);
                    i++;
                    setTimeout(typeWriter, 200);
                }
            }

            // Inicia com texto vazio e ativa o efeito
            title.textContent = '';
            setTimeout(typeWriter, 500);
        });
    </script>
</body>
</html>