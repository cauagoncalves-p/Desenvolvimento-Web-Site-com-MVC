@{
    Layout = null; // Isso desabilita o uso de qualquer _Layout
    ViewData["Title"] = "Skate Tech - Página Inicial";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --text-color: #ecf0f1;
            --glow-color: rgba(52, 152, 219, 0.7);
            --neon-pink: #ff2d75;
            --neon-blue: #00f3ff;
            --bg-dark: #121212;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Rajdhani', 'Segoe UI', sans-serif;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background: linear-gradient(135deg, #1a1a2e, #16213e);
            padding: 1rem 2rem;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .header-title {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--neon-blue), var(--text-color));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

            .header-title i {
                font-size: 1.5rem;
            }

        .nav-links {
            display: flex;
            gap: 1rem;
        }

        .nav-link {
            color: var(--text-color);
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
                transform: translateY(-2px);
                color: var(--neon-blue);
            }

            .nav-link i {
                font-size: 1.1rem;
                transition: all 0.3s ease;
            }

            .nav-link:hover i {
                color: var(--neon-pink);
            }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem;
        }

        .main-title {
            font-size: 6rem;
            font-weight: 800;
            background: linear-gradient(to right, var(--neon-blue), var(--neon-pink));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 0 10px var(--glow-color);
            animation: pulse 1.5s infinite, glow 2s ease-in-out infinite alternate;
            letter-spacing: 5px;
            position: relative;
            margin-bottom: 2rem;
        }

            .main-title::after {
                content: '';
                position: absolute;
                left: 50%;
                bottom: -15px;
                transform: translateX(-50%);
                width: 50%;
                height: 4px;
                background: linear-gradient(to right, var(--neon-blue), var(--neon-pink));
                box-shadow: 0 0 15px var(--neon-blue), 0 0 25px var(--neon-pink);
                border-radius: 50%;
            }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        @@keyframes glow {
            from {
                text-shadow: 0 0 10px var(--neon-blue);
            }

            to {
                text-shadow: 0 0 20px var(--neon-pink), 0 0 30px var(--neon-pink);
            }
        }

        footer {
            text-align: center;
            padding: 1rem;
            background: linear-gradient(135deg, #1a1a2e, #16213e);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    <header>
        <div class="nav-container">
            <a asp-action="Index" asp-controller="Home" class="header-title">
                <i class="fas fa-database"></i>
                <span>Skate Tech</span>
            </a>
            <nav class="nav-links">
                <a asp-controller="Clientes" asp-action="Index" class="nav-link">
                    <i class="fas fa-users"></i> Clientes
                </a>
                <a asp-controller="Fornecedors" asp-action="Index" class="nav-link">
                    <i class="fas fa-truck"></i> Fornecedores
                </a>
                <a asp-controller="Produtoes" asp-action="Index" class="nav-link">
                    <i class="fas fa-box"></i> Produtos
                </a>
                <a asp-controller="Pedidoes" asp-action="Index" class="nav-link">
                    <i class="fas fa-shopping-cart"></i> Pedidos
                </a>
                <a asp-controller="Item_Pedido" asp-action="Index" class="nav-link">
                    <i class="fas fa-list-ul"></i> Itens Pedido
                </a>
            </nav>
        </div>
    </header>

    <main>
        <h1 class="main-title">SKATE TECH</h1>
    </main>

    <footer>
        &copy; @DateTime.Now.Year - Skate Tech
    </footer>

    <script>
        // Efeito de digitação para o título principal
        document.addEventListener('DOMContentLoaded', function() {
            const title = document.querySelector('.main-title');
            const text = 'SKATE TECH';
            let i = 0;

            function typeWriter() {
                if (i < text.length) {
                    title.textContent = text.substring(0, i+1);
                    i++;
                    setTimeout(typeWriter, 200);
                }
            }

            // Inicia com texto vazio e ativa o efeito
            title.textContent = '';
            setTimeout(typeWriter, 500);
        });
    </script>
</body>
</html>